// ==================== STD ====================
isspace: (c: int) -> bool = {
    return c == 10 || c == 32;
}

isascii: (c: int) -> bool = {
    return c <= 127;
}

isalpha: (c: int) -> bool = {
    if (!isascii(c)) {
        return false;
    }
    if (cast(int, 'A') <= c && c <= cast(int, 'Z')) {
        return true;
    }
    if (cast(int, 'a') <= c && c <= cast(int, 'z')) {
        return true;
    }
    return false;
}

isdigit: (c: int) -> bool = {
    if (!isascii(c)) {
        return false;
    }
    return cast(int, '0') <= c && c <= cast(int, '9');
}

streq: (str_a: *int, str_b: *int, len: int) -> bool = {
    i := 0;
    while (i < len) {
        if (str_a[i] != str_b[i]) {
            return false;
        }
        if (str_a[i] == 0 && str_b[i] == 0) {
            return true;
        }
        i += 1;
    }
    return true;
}

stoi: (str: *int, len: int) -> int = {
    res := 0;
    i := 0;
    while (i < len) {
        res *= 10;
        res += str[i] - cast(int, '0');
        i += 1;
    }
    return res;
}

