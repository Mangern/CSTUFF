read_content: () -> void = {
    buf = alloc(int, 16777216);
    nbuf = 0;
    while (true) {
        c := cast(int, readchar());
        if (c == EOF) {
            break;
        }
        buf[nbuf] = c;
        nbuf += 1;
    }
};

