isp: bool[100];
primes: int[100];

main: () -> void = {
    n: int = 100;

    i: int = 2;

    while (i < n) {
        isp[i] = true;
        i += 1;
    }

    i = 2;

    prime_count: int = 0;

    while (i < n) {
        if (isp[i]) {
            j: int = i * i;
            primes[prime_count] = i;
            prime_count += 1;
            while (j < n) {
                isp[j] = false;
                j += i;
            }
        }
        i += 1;
    }

    i = 0;

    println("Generated", prime_count, "primes");
    println("Smallest prime:", primes[0]);
    println("Largest prime:", primes[prime_count - 1]);
}
